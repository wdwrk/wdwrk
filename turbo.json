{
	"$schema": "https://turborepo.org/schema.json",
	"pipeline": {
		"build": {
			"dependsOn": ["^build"],
            "inputs": ["**/tsconfig.json", "src/**/*.ts"],
			"outputs": ["dist/**"],
            "outputMode": "errors-only"
		},
		"lint": {
            "dependsOn": ["^build"],
			"inputs": [
				"**/.eslintignore",
				"**/.eslintrc.json",
				"**/.prettierignore",
				"**/.prettierrc.json",
				"**/tsconfig.eslint.json",
				"src/**/*.tsx",
				"src/**/*.ts",
				"src/**/*.css",
				"src/**/*.mdx",
				"scripts/**.js",
				"scripts/**.mjs",
				".prettierrc.js",
				".prettierrc.cjs",
				"next.config.js",
				"vite.config.ts"
			],
            "outputMode": "errors-only"
		},
        "format": {
			"dependsOn": ["^build"],
			"inputs": [
				"**/.eslintignore",
				"**/.eslintrc.json",
				"**/.prettierignore",
				"**/.prettierrc.json",
				"**/tsconfig.eslint.json",
				"src/**/*.tsx",
				"src/**/*.ts",
				"src/**/*.css",
				"src/**/*.mdx",
				"scripts/**.js",
				"scripts/**.mjs",
				".prettierrc.js",
				".prettierrc.cjs",
				"next.config.js",
				"vite.config.ts"
			],
			"outputMode": "errors-only"
		}
	}
}
